<Window x:Class="p2p.ImageSender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:p2p"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="188*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="InputPath" HorizontalAlignment="Left" Height="22" Margin="54,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="271" Grid.ColumnSpan="2"/>
        <Button x:Name="Browse_button" Content="Browse" HorizontalAlignment="Left" Margin="170.2,25,0,0" VerticalAlignment="Top" Width="75" Height="22" Click="Browse_button_Click" Grid.Column="1"/>

    </Grid>
</Window>
