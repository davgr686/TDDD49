        xmlns:local="clr-namespace:p2p"
        mc:Ignorable="d"
        Title="history" Height="800" Width="800">
    <Grid>
        <ListBox x:Name="chatHistoryBox" HorizontalAlignment="Left" Height="553" Margin="48,168,0,0" VerticalAlignment="Top" Width="701"/>
        <TextBox x:Name="searchBox" HorizontalAlignment="Left" Height="23" Margin="387,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" AutomationProperties.HelpText="Enter a Username"/>
