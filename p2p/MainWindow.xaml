<Window x:Class="p2p.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:p2p"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textLocalIp" HorizontalAlignment="Left" Height="23" Margin="214,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textFriendsIp" HorizontalAlignment="Left" Height="23" Margin="214,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textLocalPort" HorizontalAlignment="Left" Height="23" Margin="390,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textFriendsPort" HorizontalAlignment="Left" Height="23" Margin="390,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ListBox x:Name="listMessage" HorizontalAlignment="Left" Height="203" Margin="50,146,0,0" VerticalAlignment="Top" Width="476"/>
        <TextBox x:Name="textMessage" HorizontalAlignment="Left" Height="23" Margin="49,379,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="477"/>
        <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="588,81,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>
        <Button x:Name="button2" Content="Button" HorizontalAlignment="Left" Margin="588,383,0,0" VerticalAlignment="Top" Width="75" Click="button2_Click"/>

    </Grid>
</Window>
